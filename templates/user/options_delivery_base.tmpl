<:wrap user/userbase.tmpl subtitle=>"Shipping details" userpage=>"delivery" :>
<h2><:param subtitle |h:></h2>
<form action="<:dyntarget user:>" method="post" class="siteuser"><:if Cgi r:>
<input type="hidden" name="r" value="<:cgi r:>"><:or Cgi:>
<input type="hidden" name="r" value="<:dyntarget user show_opts _t delivery message "User shipping details saved successfully":>" /><:eif Cgi:>
<input type="hidden" name="_t" value="delivery" />
  <fieldset class="name">
    <legend>Name</legend>
    <div class="input name1<:ifError_img delivFirstName:> error<:or:><:eif:>">
      <label for="delivFirstName"><:error_img delivFirstName:> <:cfg "site users" display_name1 "First Name":>:</label>
      <input type="text" name="delivFirstName" id="delivFirstName" size="40" value="<:old delivFirstName user delivFirstName:>" title="<:cfg "site users" display_name1 "First Name":>" class="<:ifError_img delivFirstName:>error<:or:><:eif:>" />
    </div>
    <div class="input name2<:ifError_img delivLastName:> error<:or:><:eif:>">
      <label for="delivLastName"><:error_img delivLastName:> <:cfg "site users" display_name2 "Last Name":>:</label>
      <input type="text" name="delivLastName" id="delivLastName" size="40" value="<:old delivLastName user delivLastName:>" title="<:cfg "site users" display_name2 "Last Name":>" class="<:ifError_img delivLastName:>error<:or:><:eif:>" />
    </div>
  </fieldset>

  <fieldset class="company">
    <legend>Company</legend>
    <div class="input organization<:ifError_img delivOrganization:> error<:or:><:eif:>">
      <label for="delivOrganization"><:error_img delivOrganization:> <:cfg "site users" display_organization "Organisation Name":>:</label>
      <input type="text" name="delivOrganization" id="delivOrganization" size="40" value="<:old delivOrganization user delivOrganization:>" title="<:cfg "site users" display_organization "Organisation Name":>" class="<:ifError_img delivOrganization:>error<:or:><:eif:>" />
    </div>
    <div class="input title<:ifError_img delivTitle:> error<:or:><:eif:>">
      <label for="delivTitle"><:error_img delivTitle:> <:cfg "site users" display_title "Title / Role":>:<:ifRequired delivTitle:> <span class="required">*</span><:or:><:eif:></label>
      <input type="text" name="delivTitle" id="delivTitle" size="40" value="<:old delivTitle user delivTitle:>" title="<:cfg "site users" display_title "Title / Role":>" class="<:ifError_img delivTitle:>error<:or:><:eif:>" />
    </div>
  </fieldset>

  <fieldset class="address">
    <legend>Address</legend>
    <div class="input address<:ifError_img delivStreet:> error<:or:><:eif:>">
      <label for="delivStreet"><:error_img delivStreet:> <:cfg "site users" display_street "Address":>:</label>
      <input type="text" name="delivStreet" id="delivStreet" size="40" value="<:old delivStreet user delivStreet:>" title="<:cfg "site users" display_street "Address":>" class="<:ifError_img delivStreet:>error<:or:><:eif:>" />
    </div>
    <div class="input address2<:ifError_img delivStreet2:> error<:or:><:eif:>">
      <label for="delivStreet2"><:error_img delivStreet2:> <:cfg "site users" display_street2 "Address 2":>:</label>
      <input type="text" name="delivStreet2" id="delivStreet2" size="40" value="<:old  delivStreet2 user delivStreet2:>" title="<:cfg "site users" display_street2 "Address 2":>" class="<:ifError_img delivStreet2:>error<:or:><:eif:>" />
    </div>
    <div class="input city<:ifError_img delivSuburb:> error<:or:><:eif:>">
      <label for="delivSuburb"><:error_img delivSuburb:> <:cfg "site users" display_city "Suburb":>:</label>
      <input type="text" name="delivSuburb" id="delivSuburb" size="40" value="<:old delivSuburb user delivSuburb:>" title="<:cfg "site users" display_city "Suburb":>" class="<:ifError_img delivSuburb:>error<:or:><:eif:>" />
    </div>
    <div class="input state<:ifError_img delivState:> error<:or:><:eif:>">
      <label for="delivState"><:error_img delivState:> <:cfg "site users" display_state "State":>:</label>
      <input type="text" name="delivState" id="delivState" size="10" value="<:old delivState user delivState:>" title="<:cfg "site users" display_state "State":>" class="<:ifError_img delivState:>error<:or:><:eif:>" />
    </div>
    <div class="input postcode<:ifError_img delivPostCode:> error<:or:><:eif:>">
      <label for="delivPostCode"><:error_img delivPostCode:> <:cfg "site users" display_postcode "Postcode":>:</label>
      <input type="text" name="delivPostCode" id="delivPostCode" size="10" value="<:old delivPostCode user delivPostCode:>" title="<:cfg "site users" display_postcode "Postcode":>" class="<:ifError_img delivPostCode:>error<:or:><:eif:>" />
    </div>
    <div class="input country<:ifError_img delivCountry:> error<:or:><:eif:>">
      <label for="delivCountry"><:error_img delivCountry:> <:cfg "site users" display_country "Country":>:</label><:if Cfgsection "country selector":>
      <select name="delivCountry" id="delivCountry" title="<:cfg "site users" display_country "Country":>" class="<:ifError_img delivCountry:>error<:or:><:eif:>">
        <option value="">Please select a country</option><:iterator begin dyncfgsection "country selector" sort=value:>
        <option value="<:uc [dyncfgentry key]:>"<:if Or [ifEq [old delivCountry user delivCountry] [uc [dyncfgentry key]]] [ifEq [old delivCountry user delivCountry] [uc [dyncfgentry value]]]:> selected="selected"<:or Or:><:eif Or:>><:dyncfgentry value:></option>
        <:iterator end dyncfgsection:>
      </select><:or Cfgsection:>
      <input type="text" name="delivCountry" id="delivCountry" size="20" value="<:old delivCountry user delivCountry:>" title="<:cfg "site users" display_country "Country":>" class="<:ifError_img delivCountry:>error<:or:><:eif:>" /><:eif Cfgsection:> 
    </div>
  </fieldset>

  <fieldset class="contact">
    <legend>Contact</legend>
    <div class="input telephone<:ifError_img delivTelephone:> error<:or:><:eif:>">
      <label for="telephone"><:error_img delivTelephone:> <:cfg "site users" display_telephone "Telephone":>:</label>
      <input type="text" name="delivTelephone" id="delivTelephone" size="20" value="<:old delivTelephone user delivTelephone:>" title="<:cfg "site users" display_telephone "Telephone":>" class="<:ifError_img delivTelephone:>error<:or:><:eif:>" />
    </div>
    <div class="input facsimile<:ifError_img delivFacsimile:> error<:or:><:eif:>">
      <label for="delivFacsimile"><:error_img delivFacsimile:> <:cfg "site users" display_facsimile "Facsimile":>:</label>
      <input type="text" name="delivFacsimile" id="delivFacsimile" size="20" value="<:old delivFacsimile user delivFacsimile:>" title="<:cfg "site users" display_facsimile "Facsimile":>" class="<:ifError_img delivFacsimile:>error<:or:><:eif:>" />
    </div>
    <div class="input mobile<:ifError_img delivMobile:> error<:or:><:eif:>">
      <label for="delivMobile"><:error_img delivMobile:> <:cfg "site users" display_mobile "Mobile":>:</label>
      <input type="text" name="delivMobile" id="delivMobile" size="20" value="<:old delivMobile user delivMobile:>" title="<:cfg "site users" display_mobile "Mobile":>" class="<:ifError_img delivMobile:>error<:or:><:eif:>" />
    </div>
    <div class="input email<:ifError_img delivEmail:> error<:or:><:eif:>">
      <label for="delivEmail"><:error_img delivEmail:> <:cfg "site users" display_email "Email Address":>:</label>
      <input type="text" name="delivEmail" id="delivEmail" size="40" value="<:old delivEmail user delivEmail:>" title="<:cfg "site users" display_email "Email Address":>" class="<:ifError_img delivEmail:>error<:or:><:eif:>" />
    </div>
  </fieldset>
<:include include/custom/user_options_delivery_custom.tmpl optional:>
  <p><span class="required">* Required.</span> <:cfg "site users" required_text "Please provide information for all marked fields.":></p>
  <p class="buttons"><input type="submit" name="saveopts" value="Save changes" accesskey="s" title="AccessKey = s" /></p>
</form>