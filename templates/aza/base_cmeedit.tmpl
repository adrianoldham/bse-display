<:wrap user/userbase.tmpl title=>"User Services" :>
<:include include/usernav.tmpl:>
<h2>Edit custom course</h2>
<div id="user">
<:include include/usermessage.tmpl:>
<p><a href="<:script:>?a_cmelist=1">Back to list</a></p>
<form method="post" action="<:script:>">
<input type="hidden" name="id" value="<:entry id:>" />
<table>
  <tr>
   <th align="left">Date:</th>
   <td><input type="text" name="date_at" value="<:old date_at date "%d/%m/%Y" entry date_at:>" size="10" /> (dd/mm/yyyy)</td>
   <td><:error_img date_at:></td>
  </tr>
  <tr>
    <th align="left">Description:</th>
    <td><input type="text" name="description" value="<:old description entry description:>" size="40" /></td>
    <td><:error_img description:></td>
  </tr>
  <tr>
    <th align="left">Points:</th>
    <td><input type="text" name="points" value="<:old points entry points:>" size="5" /></td>
    <td><:error_img points:></td>
  </tr>
</table>
<p><input type="submit" name="a_cmesave" value="Save changes" /></p>
</form>
</div>