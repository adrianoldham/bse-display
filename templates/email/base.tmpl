<!DOCTYPE HTML>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<style type="text/css" media="all">

/* @group reset */

html,body,div,span,applet,object,iframe,h1,h2,h3,h4,h5,h6,p,blockquote,pre,a,abbr,acronym,address,big,cite,code,del,dfn,em,font,img,ins,kbd,q,s,samp,small,strike,strong,sub,sup,tt,var,b,u,i,center,dl,dt,dd,ol,ul,li,fieldset,form,label,legend,table,caption,tbody,tfoot,thead,tr,th,td{margin:0;padding:0;border:0;outline:0;font-size:100%;vertical-align:baseline;background:transparent}body{line-height:1}ol,ul{list-style:none}blockquote,q{quotes:none}ins{text-decoration:none}del{text-decoration:line-through}table{border-collapse:collapse;border-spacing:0}

/* @end */

/* @group layout */

html, body, div.bse-wrapper {
	background-color: #dfdfdf;
}

div.bse-wrapper {
    padding: 0 0.75em;
    font-family: Arial, Helvetica, Verdana, sans-serif;
    font-size: 14px;
    line-height: 1.5;
    color: #333;
    text-align: center;
	overflow: hidden;
}

div.bse-content {
    text-align: left;
    max-width: 60em;
    min-width: 25em;
    margin: 2em auto;
    text-shadow: 0 1px 0 #fff;
	-webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

div.bse-header .bse-brand {
    color: #b8b8b8;
    text-shadow: 0 1px 0 #fff;
}

div.bse-main {
    text-align: left;
    padding: 2.5em 3em 2em;
    background-color: #fff;
    -webkit-box-shadow: 0 0.35em 0.75em rgba(0,0,0,0.4);
    -moz-box-shadow: 0 0.35em 0.75em rgba(0,0,0,0.4);
    box-shadow: 0 0.2em 0.75em rgba(0,0,0,0.4);
    -webkit-border-radius: 0.75em;
    -moz-border-radius: 0.75em;
    border-radius: 0.75em;
    border: 0.25em solid #fff;
}

/* @end */

/* @group generic */

a {
    text-decoration: underline;
    color: #15a2cb;
}

h1, h2, h3, h4, .bse-brand {
	font-family: HelveticaNeue-Light, 'Helvetica Neue Light', 'Helvetica Neue', Helvetica, Arial, Verdana, sans-serif;
	color: #15a2cb;
	margin-top: 2em;
	margin-bottom: 0.25em;
	line-height: 1.25;
	font-weight: normal;
	clear: both;
}

h1 {
	margin-top: 0;
	font-size: 2em;
}

h2 {
	font-size: 1.5em;
}

h3 {
	font-size: 1.25em;
}

h4 {
	font-size: 1em;
}

h1 + h2,
h2 + h3 {
    margin-top: 0;
    margin-bottom: 1.5em;
}

ul {
	padding-left: 1.75em;
	list-style: disc;
}

ol {
	padding-left: 2em;
	list-style: decimal-leading-zero;
}

p, ul, ol, dl, blockquote, address, table {
	margin-bottom: 1em;
	font-style: normal;
}

small, .small {
	font-size: 0.9em;
	color: #999;
}

dl {
    margin-top: 1em;
    margin-bottom: 1em;
}

dt {
    font-weight: bold;
    text-transform: uppercase;
    margin-bottom: 0.5em;
}

dd {
    margin-left: 1.5em;
    margin-bottom: 1em;
}

dd span {
    font-weight: bold;
    color: #15a2cb;
}

.bse-brand {
	margin-top: 0;
	margin-bottom: 0.75em;
	font-size: 1.75em;
}

.left {
    float: left;
}

.right {
    float: right;
}

.group {
    overflow: hidden;
    margin-bottom: 3em;
    /*border: 1px solid #ccc;
    border-radius: 0.5em;
    padding: 0 0.5em 0.5em;*/
}

.group table {
	margin-bottom: 0;
}

.paid, .unpaid {
	float: left;
	margin-right: 0.5em;
	margin-top: -0.1em;
	padding: 0.1em 0.5em;
	background-color: #c03;
	color: #fff !important;
	text-shadow: none;
	border-radius: 0.35em;
}

.paid {
	background-color: green;
}

/* @end */

/* @group items table */

table.items {
	border: 1px solid #ccc;
	border-width: 1px 0;
	width: 100%;
}

table.items caption {
	font-weight: bold;
	text-align: left;
	padding: 0.5em 0;
	color: #666;
}

table.items th {
	border-bottom: 2px solid #ccc;
	padding: 0.5em;
	font-size: 0.9em;
	color: #999;
}

table.items td {
	border-bottom: 1px solid #ddd;
	padding: 0.75em 0.5em;
}

table.items th, table.items td {
	width: auto;
	text-align: left;
}

table.items th+th, table.items td+td {
	width: 10%;
	text-align: right;
	white-space: nowrap;
}

table.items td.price, table.items td.extended, table.files td.size {
	font-weight: bold;
	color: #15a2cb;
}

table.items td.extended {
	color: inherit;
}

table.items span {
	color: #999;
}

/* @end */

/* @group totals */

div.totals {
	border-bottom: 2px solid #ccc;
	text-align: right;
	margin-bottom: 3em;
	padding: 0 0.5em 1em 0.5em;
}

div.totals p {
	margin: 0;
	font-weight: bold;
	line-height: 1;
}

div.totals p.freight,
div.totals p.discount {
	margin-bottom: 0.75em;
	font-size: 1.1em;
}

div.totals p.discount {
    border-bottom: 1px solid #ddd;
    margin: 2em -0.5em 1em;
    padding: 0 0.5em 0.75em;
}

div.totals p.total {
	margin-bottom: 0;
	font-size: 1.75em;
	color: #be0f54; /* wine */
}

div.totals span, div.totals label, div.totals abbr {
	color: #999;
}

div.totals span, div.totals abbr {
	color: #ccc;
	font-weight: normal;
}

/* @end */

/* @group formmail table */

div.bse-formmail table {
	width: 100%;
}

div.bse-formmail table caption {
	text-align: left;
	font-size: 1.25em;
	color: #15a2cb;
	margin: 0;
	padding: 1em 0 0.5em 0;
}

div.bse-formmail table th, div.bse-formmail table td {
	text-align: left;
	vertical-align: top;
	margin: 0;
	padding: 0.5em 1em;
	border-style: solid;
	border-color: #eee #999;
	border-width: 0.1em 0;

}

div.bse-formmail table th {
	font-weight: normal;
	color: #999;
	text-align: right;
	white-space: nowrap;
	border-width: 0.1em 0.25em 0.1em 0;
	width: 20%;
}

div.bse-formmail table td p:last-child {
    margin-bottom: 0 !important;
}

/* @end */

/* @group vertical table */

table.vertical {
	width: 99%;
	margin: 0 0.25%;
}

table.vertical.left, table.vertical.right {
	width: 49%;
	margin: 0 0.25%;
	float: left;
}

table.vertical caption {
	font-weight: bold;
	text-align: left;
	padding: 0.5em 0;
	color: #666;
}

table.vertical th, table.vertical td {
	font-size: 0.85em;
	padding: 0.35em 1em;
}

table.vertical th {
	padding-right: 1em;
	text-align: right;
	border-right: 0.25em solid #ccc;
	color: #999;
	width: 30%;
	white-space: nowrap;
}

table.vertical td {
	padding-left: 1em;
	width: 70%;
}

/* @end */

/* @group footer */

p.bse-signature {
    margin-top: 4em;
}

p.bse-buttons {
    margin-top: 2em;
    margin-bottom: 2em;
}

a.bse-button {
	margin: 0;
	padding: 0.5em 1em;
	color: #555;
	font-size: 1em;
	font-weight: bold;
	line-height: 1.25;
	text-decoration: none;
	text-align: center;
	text-shadow: 0 0.083em 0 rgba(255,255,255,0.75);

	border: 0.083em solid;
	border-color: #ccc #aaa #999 #ccc;
	
	cursor: pointer;

	-webkit-border-radius: 0.25em;
	-moz-border-radius: 0.25em;
	border-radius: 0.25em;

	-webkit-box-shadow: 0 0.1em 0.2em rgba(0,0,0,0.15);
	-moz-box-shadow: 0 0.1em 0.2em rgba(0,0,0,0.15);
	box-shadow: 0 0.1em 0.2em rgba(0,0,0,0.15);

	background-color: #ddd; /* Old browsers */
	background-image: -webkit-gradient(linear, left top, left bottom, from(#fff), to(#ccc)); /* Chrome,Safari4+ */
}

div.bse-footer p {
    margin-top: 1em;
    font-size: 0.85em;
}

div.bse-footer p, div.bse-footer a {
    color: #999;
}

/* @end */

</style>

<style type="text/css" media="not unknown">

/* @group all non-inlineable */

@media all {
    a.bse-button {
    	background-image: -webkit-gradient(linear, left top, left bottom, from(#fff), to(#ccc)) !important; /* Chrome,Safari4+ */
    	background-image: -webkit-linear-gradient(top, #fff, #ccc) !important; /* Chrome10+,Safari5.1+ */
    	background-image: -moz-linear-gradient(top, #fff, #ccc) !important; /* FF3.6+ */
    	background-image: -ms-linear-gradient(top, #fff, #ccc) !important; /* IE10+ */
    	background-image: -o-linear-gradient(top, #fff, #ccc) !important; /* Opera11.10+ */
    	background-image: linear-gradient(top, #fff, #ccc) !important; /* W3C */
    	filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffff', endColorstr='#cccccc'); /* IE7+ */
    }
}

/* @end */

/* @group mobile media */

@media screen and (max-width: 768px) {
    div.bse-wrapper {
    	font-size: 13px !important;
    }
    div.bse-main {
        padding: 1.5em 2em 1em !important;
    }
}

@media screen and (max-width: 480px) {
    div.bse-wrapper {
        padding: 0 0.5em !important;
    	font-size: 13px !important;
    }
    div.bse-header .bse-brand {
    	font-size: 1.5em !important;
    }
    div.bse-main {
		padding: 0.75em 1.25em 0.5em !important;
    }
    div.bse-main h1 {
    	font-size: 1.75em !important;
    }
    div.bse-main h2 {
    	font-size: 1.25em !important;
    }
    div.bse-main h3 {
    	font-size: 1em !important;
    }
    table.vertical {
        width: 100% !important;
    }
    table.vertical + table.vertical {
        margin-top: 1.5em !important;
    }
    table.items .code, table.items .extended, table.items .date {
        display: none !important;
    }
    table.items span {
    	display: block !important;
    	font-size: 0.85em !important;
    }
    div.totals span {
    	display: none !important;
    }
}

/* @end */

/* @group print media */

@media print {
    html, body, div.bse-wrapper {
        background-color: #fff !important;
    }

    div.bse-main {
        -webkit-box-shadow: none !important;
        -moz-box-shadow: none !important;
        box-shadow: none !important;
        -webkit-border-radius: none !important;
        -moz-border-radius: none !important;
        border-radius: none !important;
        border: none !important;
    }

    p.bse-buttons {
        display: none;
    }
}

/* @end */

</style>
</head>
<body>
<div class="bse-wrapper <:= params.classes:>">
  <div class="bse-content">
    <div class="bse-header">
      <p class="bse-brand"><:= cfg.entry("site", "name"):></p>
    </div>
    <div class="bse-main">
      <:-.if params.title:>
      <h1><:= params.title:></h1>
      <:-.end if:>
      <:- wrap here:>
      <p class="bse-signature">Regards,<br />
      The team at <em><:= cfg.entry("site", "name"):></em></p>
    </div>
    <div class="bse-footer">
      <p>This email was sent to you by <a href="<:cfg site url:>"><:= cfg.entry("site", "name"):></a>.</p>
    </div>
  </div>
</div>
</body>
</html>